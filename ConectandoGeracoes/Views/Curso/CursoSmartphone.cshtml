@page "/video"
@{
    string videoTitle = "Aprenda usar as funcionalidades básicas de um Smartphone";
    string videoDescription = "Hoje vamos dar inicio ao um curso bem legal ensinando como usar o celular de forma simples e completa e bem explicado para todos os tipos de públicos sejam bem vindos a nova era da tecnologia";
    string videoUrl = "https://www.youtube.com/embed/cCBQhfXYiEw"; // Substitua pelo ID do vídeo
}

<div class="video-container">
    <iframe src="@videoUrl"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
    </iframe>
    <div class="description">
        <h3>@videoTitle</h3>
        <p>@videoDescription</p>
    </div>
</div>

<div class="back-button-container" style="text-align: center; margin-top: 20px;">
    <button onclick="window.history.back()" class="btn btn-secondary">Voltar</button>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
    }

    .video-container {
        width: 80%;
        max-width: 800px;
        margin: 50px auto;
        background: white;
        border: 2px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        overflow: hidden;
    }

    iframe {
        width: 100%;
        height: 450px;
        border: none;
    }

    .description {
        padding: 10px;
        text-align: center;
    }
</style>
