@page "/video"
@{
    string videoTitle = "Aprender a usar serviços de saúde online";
    string videoDescription = "Neste vídeo tutorial, nós ensinamos o passo a passo do serviço de saúde online.";
    string videoUrl = "https://www.youtube.com/embed/f7JWCLrp-Js"; // Substitua pelo ID do vídeo
}

<div class="video-container">
    <iframe src="@videoUrl"
            title="YouTube video player"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen>
    </iframe>
    <div class="description">
        <h3>@videoTitle</h3>
        <p>@videoDescription</p>
    </div>
</div>

<div class="back-button-container" style="text-align: center; margin-top: 20px;">
    <button onclick="window.history.back()" class="btn btn-secondary">Voltar</button>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f0f0f0;
    }

    .video-container {
        width: 80%;
        max-width: 800px;
        margin: 50px auto;
        background: white;
        border: 2px solid #ccc;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        overflow: hidden;
    }

    iframe {
        width: 100%;
        height: 450px;
        border: none;
    }

    .description {
        padding: 10px;
        text-align: center;
    }
</style>
